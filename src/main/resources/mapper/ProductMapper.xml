<!-- resources/mapper/ProductMapper.xml -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ecommerce.mapper.ProductMapper">
    <resultMap id="BaseResultMap" type="com.example.ecommerce.entity.Product">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="stock" property="stock"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 分页查询商品 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM product ORDER BY create_time DESC
    </select>

    <!-- 扣减库存 -->
    <update id="updateStock">
        UPDATE product
        SET stock = stock - #{count}
        WHERE id = #{id} AND stock >= #{count}
    </update>

    <select id="selectById" resultType="com.example.ecommerce.entity.Product">
        SELECT * FROM product
        WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product(name, price, stock)
        VALUES(#{name}, #{price}, #{stock})
    </insert>

    <update id="deductStock">
        UPDATE product
        SET stock = stock - #{quantity}
        WHERE id = #{productId}
        AND stock >= #{quantity}
    </update>
</mapper>
